#!/usr/bin/env bash
set -euo pipefail

LOCAL_REPO="$HOME/sync"
REMOTE_REPO="drive:AutoSync"

sync() {
    if ! ls "$LOCAL_REPO" >/dev/null 2>&1 || [[ -z $(ls "$LOCAL_REPO") ]]; then
        mkdir -p "$LOCAL_REPO"
        rclone \
            bisync \
            "$LOCAL_REPO" \
            "$REMOTE_REPO" \
            --create-empty-src-dirs \
            --compare size,modtime,checksum \
            --slow-hash-sync-only \
            --resilient \
            -MvP \
            --drive-skip-gdocs \
            --fix-case \
            --resync
    else
        rclone \
            bisync \
            "$LOCAL_REPO" \
            "$REMOTE_REPO" \
            --create-empty-src-dirs \
            --compare size,modtime,checksum \
            --slow-hash-sync-only \
            --resilient \
            -MvP \
            --drive-skip-gdocs \
            --force \
            --fix-case
    fi
}

subcommand="$1"
shift
case "$subcommand" in
    sync | s) sync "$@" ;;
esac
